	}

	.benefits-image {
		position: relative;
	}

	.transformation-image {
		width: 100%;
		border-radius: 20px;
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
	}

	.transformation-badge {
		position: absolute;
