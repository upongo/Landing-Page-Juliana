	.how-it-works {
		padding: 100px 0;
		background: #f8fafc;
	}

	.how-it-works h2 {
		text-align: center;
		font-size: 2.5rem;
		font-weight: 700;
		color: #1e293b;
		margin-bottom: 16px;
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: #64748b;
		margin-bottom: 60px;
	}

	.steps-grid {
		display: grid;
